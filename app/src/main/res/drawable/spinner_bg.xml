    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/grey"/>
            <solid android:color="@color/colorwhite" />
            <item android:name="android:shadowColor">#0f34547a</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">11</item>
            <item android:name="android:textcolor">#000</item>
        </shape>
    </item>
</selector>