<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical"
    android:theme="@style/AppTheme.AppBarOverlay"
    tools:context=".activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Register Farmer"
            android:textColor="@color/colorwhite"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_farmer_det"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorblack"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="8dp"
                android:padding="10dp"
                android:visibility="visible"
                card_view:cardElevation="10dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tv_lb_agent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dp"
                            android:layout_weight="0.8"
                            android:padding="10dp"
                            android:text="Farmer Details"
                            android:textColor="@color/textcolor"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/iv_arrow_icon"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_weight="0.2"
                            android:padding="10dp"
                            android:src="@drawable/ic_expand_less_black_24dp"
                            android:text="From Agent" />
                    </LinearLayout>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/lin_farmer_det"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/et_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/border_edittext"
                            android:hint="Enter Farmer Name"
                            android:textColor="@color/textColor"
                            android:padding="15dp"
                            android:inputType="text"
                            android:textColorHint="@color/textColor" />





                        <EditText
                            android:id="@+id/et_phoneno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/border_edittext"
                            android:inputType="phone"
                            android:hint="Enter Phone No."
                            android:textColor="@color/textColor"
                            android:padding="15dp"
                            android:textColorHint="@color/textColor" />

                        <EditText
                            android:id="@+id/et_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:editable="false"
                            android:clickable="true"
                            android:textColor="@color/textColor"
                            android:focusable="false"
                            android:background="@drawable/border_edittext"
                            android:hint="Enter DOB"
                            android:padding="15dp"
                            android:textColorHint="@color/textColor" />
                        <TextView
                            android:id="@+id/doberror"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text=""
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/red"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/border_edittext"
                            android:gravity="center|center_horizontal"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_10"
                                android:textColor="@color/textColor"
                                android:text="@string/gender" />

                            <RadioGroup
                                android:id="@+id/radiogender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="@dimen/dimen_15">

                                <RadioButton
                                    android:id="@+id/radioMale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/dimen_10"
                                    android:checked="true"
                                    android:textColor="@color/textColor"
                                    android:text="Male" />

                                <RadioButton
                                    android:textColor="@color/textColor"
                                    android:id="@+id/radioFemale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Female" />

                            </RadioGroup>
                        </LinearLayout>


                        <Button
                            android:id="@+id/btn_farmel_det_next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_rectangle"
                            android:padding="15dp"
                            android:text="Next"
                            android:textColor="@color/colorwhite" />
                    </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bank_det"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorblack"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="8dp"
                android:padding="10dp"
                android:visibility="gone"
                card_view:cardElevation="10dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dp"
                            android:layout_weight="0.8"
                            android:padding="10dp"
                            android:text="Farmer Bank Details"
                            android:textColor="@color/textcolor"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/iv_bank_arrow_icon"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_weight="0.2"
                            android:padding="10dp"
                            android:src="@drawable/ic_expand_less_black_24dp"
                            android:text="From Agent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_farmer_bank_det"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <EditText
                            android:id="@+id/et_account_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/border_edittext"
                            android:hint="Account No."
                            android:textColor="@color/textColor"
                            android:inputType="number"
                            android:padding="15dp"
                            android:textColorHint="@color/textColor" />
                        <Spinner
                            android:id="@+id/et_bankname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/border_edittext"
                            android:drawSelectorOnTop="true"
                            android:entries="@array/document_type"
                            android:hint="Bank Name"
                            android:padding="15dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorblack"
                            android:textAlignment="center"
                            android:text="Take a clear front picture of your ATM Card"/>

                        <ImageView
                            android:id="@+id/iv_bank_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/img_placeholde" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_farmel_bank_det_pre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_rectangle"
                                android:padding="15dp"
                                android:text="PREVIOUS"
                                android:textColor="@color/colorwhite" />

                            <Button
                                android:id="@+id/btn_farmel_bank_det_next"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_rectangle"
                                android:padding="15dp"
                                android:text="Next"
                                android:textColor="@color/colorwhite" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorwhite"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="8dp"
                android:padding="10dp"
                android:visibility="gone"
                card_view:cardElevation="10dp"
                card_view:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dp"
                            android:layout_weight="0.8"
                            android:padding="10dp"
                            android:text="Farmer Document Details"
                            android:textColor="@color/textcolor"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/iv_document_arrow_icon"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:layout_weight="0.2"
                            android:padding="10dp"
                            android:src="@drawable/ic_expand_less_black_24dp"
                            android:text="From Agent" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_farmer_doc_det"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/document_type"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/textColor"
                            android:text="ID Number"
                            android:textSize="18sp"
                            android:padding="15dp" />
                        <EditText
                            android:id="@+id/et_idnumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/border_edittext"
                            android:hint="Enter Id No."
                            android:padding="15dp"
                            android:textColor="@color/textColor"
                            android:inputType="text"
                            android:textColorHint="@color/textColor" />

                        <!--<EditText-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginBottom="20dp"-->
                            <!--android:background="@drawable/border_edittext"-->
                            <!--android:hint="Document No."-->
                            <!--android:inputType="text"-->
                            <!--android:padding="15dp"-->
                            <!--android:textColorHint="@color/textColor" />-->

                        <ImageView
                            android:visibility="visible"
                            android:id="@+id/iv_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/img_placeholde" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_farmel_doc_det_pre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_rectangle"
                                android:padding="15dp"
                                android:text="PREVIOUS"
                                android:textColor="@color/colorwhite" />

                            <Button

                                android:id="@+id/btn_finish"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/shape_rectangle"
                                android:padding="15dp"
                                android:text="FINISH"
                                android:textColor="@color/colorwhite" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

</LinearLayout>