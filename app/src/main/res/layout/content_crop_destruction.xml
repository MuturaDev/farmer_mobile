<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.CropDestructionActivity"
    tools:showIn="@layout/activity_crop_destruction">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dimen_10"
            android:padding="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10"
                android:textColor="@color/textColor"
                android:text="Farmer" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">

                <EditText
                    android:imeOptions="actionSearch"
                    android:id="@+id/farmer_destruction"
                    android:padding="15dp"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_edittext"
                    android:drawSelectorOnTop="true"
                    android:hint="Select farmer"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10"
                android:textColor="@color/textColor"
                android:text="Select Crop Date" />
            <Spinner
                android:layout_marginBottom="20dp"
                android:id="@+id/codedate_destruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:drawSelectorOnTop="true"
                android:entries="@array/empty"
                android:hint="crop date"
                android:background="@drawable/border_edittext"></Spinner>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10"
                android:textColor="@color/textColor"
                android:text="Select Units" />
            <Spinner
                android:layout_marginBottom="20dp"
                android:id="@+id/noofunits_destruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:drawSelectorOnTop="true"
                android:entries="@array/empty"
                android:hint="crop date"
                android:background="@drawable/border_edittext"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10"
                android:textColor="@color/textColor"
                android:text="Select Type" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_edittext"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal"
                android:padding="10dp">


                <RadioGroup
                    android:id="@+id/radiotype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/dimen_15">

                    <RadioButton
                        android:id="@+id/radioPartial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:textColor="@color/textColor"
                        android:text="Partial Destruction" />

                    <RadioButton
                        android:textColor="@color/textColor"
                        android:id="@+id/radioCrop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop Destruction" />

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_10"
                android:textColor="@color/textColor"
                android:text="Select Reason" />

            <Spinner
                android:layout_marginBottom="20dp"
                android:id="@+id/reason_destruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:drawSelectorOnTop="true"
                android:entries="@array/empty"
                android:hint="crop date"
                android:background="@drawable/border_edittext"></Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorblack"
                android:textAlignment="center"
                android:text="Take a clear picture of the contract"/>

            <ImageView
                android:id="@+id/iv_destruction_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:src="@drawable/img_placeholde" />


            <Button
                android:id="@+id/btn_recruit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:background="@drawable/shape_rectangle"
                android:padding="10dp"
                android:layout_marginBottom="20sp"
                android:text="Submit"
                android:onClick="destruction_submit"
                android:textAllCaps="true"
                android:textColor="@color/colorwhite"
                android:typeface="normal" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>