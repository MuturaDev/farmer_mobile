<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.IrrigateBlockActivity"
    tools:showIn="@layout/activity_irrigate_block_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="vertical"
            android:padding="10sp">




            <RelativeLayout
                android:id="@+id/select_block_layout"
                android:onClick="searchBlock"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@drawable/search_bg"
                android:layout_height="60dp">

                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/select_block"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:hint="Select Block"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_height="60dp"/>


            </RelativeLayout>

            <EditText
                android:id="@+id/txt_irrigation_hours"
                android:layout_marginTop="0dp"
                android:background="@drawable/spinner_bg"
                android:layout_width="match_parent"
                android:hint="Irrigation Hours"
                android:textStyle="bold"
                android:textSize="15dp"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="60dp"/>

            <com.cw.farmer.widgetutils.TimeEditText
                android:visibility="gone"
                android:paddingLeft="@dimen/dimen_10"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/spinner_bg"
                android:layout_width="match_parent"
                android:hint="Irrigation Hours"
                android:textSize="35sp"
                android:layout_height="60dp"/>

            <EditText
                android:id="@+id/txt_cubic_litres"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner_bg"
                android:layout_width="match_parent"
                android:hint="Cubic Litres"
                android:textStyle="bold"
                android:textSize="15dp"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="60dp"/>



            <Button
                android:id="@+id/btn_recruit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_marginBottom="20sp"
                android:background="@drawable/shape_rectangle"
                android:padding="10dp"
                android:onClick="submit"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/colorwhite"
                android:typeface="normal" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>