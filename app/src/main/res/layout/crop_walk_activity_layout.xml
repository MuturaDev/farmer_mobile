<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CropWalkActivity"
    android:background="@color/white"
    android:id="@+id/crop_walk_activity_layout">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/btn_back"
                    android:onClick="back"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:src="@drawable/back_arrow_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <ImageView
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    android:layout_width="60dp"
                    android:src="@drawable/crop_walk"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorwhite"
                    android:textSize="18sp"
                    android:text="Crop Walk"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_layout_bg_lightblue"
                    android:layout_height="45dp">



                    <TextView
                        android:id="@+id/et_select_farmer"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:hint="@string/et_select_farmer"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:paddingLeft="15dp"
                        android:textColorHint="@color/black"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        />



                    <!--                -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/search" />


                </RelativeLayout>

                <EditText
                    android:id="@+id/et_crop_date"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="@string/et_crop_date"
                    android:background="@drawable/edit_text_layout_bg_lightblue"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:enabled="false"
                    android:paddingLeft="26dp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:inputType="text"
                    android:singleLine="true" />

                <RelativeLayout
                    android:id="@+id/spinner_layout1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_layout_bg_lightblue"
                    android:layout_height="45dp">

                    <ProgressBar
                        android:id="@+id/spinner_progress"
                        android:visibility="visible"
                        android:layout_centerInParent="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

<!--android:entries="@array/sp_crop_stage"-->
                    <Spinner
                        android:id="@+id/sp_crop_stage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="15dp"
                        android:textSize="13sp"
                        android:visibility="gone"
                        android:layout_marginRight="25dp"
                        android:background="@android:color/transparent"

                        android:gravity="center"
                        android:spinnerMode="dropdown" />


                    <!--                -->
                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_down_black" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/spinner_layout2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_layout_bg_lightblue"
                    android:layout_height="45dp">


                    <ProgressBar
                        android:id="@+id/spinner_progress2"
                        android:visibility="visible"
                        android:layout_centerInParent="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

<!--android:entries="@array/sp_growth_parameter"-->
                    <Spinner
                        android:id="@+id/sp_growth_parameter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="15dp"
                        android:textSize="13sp"
                        android:layout_marginRight="25dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />



                    <!--                -->
                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_arrow_down_black" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/spinner_layout_comment"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_layout_bg_lightblue"
                    android:layout_height="45dp">

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:hint="@string/et_comment"
                    android:background="@drawable/edit_text_layout_bg_lightblue"
                    android:layout_height="45dp"
                    android:textSize="16sp"
                    android:paddingLeft="26dp"
                    android:textColorHint="@color/black"
                    android:textStyle="normal"
                    android:inputType="textMultiLine"
                    android:singleLine="false" />

                    <Spinner
                        android:id="@+id/sp_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:paddingLeft="15dp"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        android:entries="@array/sp_comment"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/image_dropdown_comment"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_arrow_down_black" />

                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/spinner_layout_additional_info"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text_layout_bg_lightblue"
                    android:layout_height="45dp">

                <EditText
                    android:id="@+id/et_additional_feedback"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:hint="@string/et_additional_feedback"
                    android:background="@drawable/edit_text_layout_bg_lightblue"
                    android:layout_height="45dp"
                    android:textSize="16sp"
                    android:visibility="visible"
                    android:paddingLeft="26dp"
                    android:textColorHint="@color/black"
                    android:textStyle="normal"
                    android:inputType="textMultiLine"
                    android:singleLine="true" />

                    <Spinner
                        android:id="@+id/sp_additional_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:paddingLeft="15dp"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        android:entries="@array/sp_comment"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

<!--                    <io.apptik.widget.multiselectspinner.MultiSelectSpinner-->
<!--                        android:id="@+id/multiselectSpinner"-->
<!--                        android:layout_marginTop="10dp"-->
<!--                        android:visibility="gone"-->
<!--                        android:background="@color/colorLightBlue"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginLeft="15dp"-->
<!--                        android:layout_marginRight="15dp"-->
<!--                        />-->

                    <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
                        android:id="@+id/multipleItemSelectionSpinner"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@color/colorLightBlue"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:visibility="gone"
                        app:hintText="Select Additional Info" />

                    <ImageView
                        android:id="@+id/image_dropdown_additional_info"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_arrow_down_black" />

                </RelativeLayout>




                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_take_photo"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:layout_width="180dp"
                    android:layout_height="50dp">

                    <RelativeLayout
                        android:background="@drawable/shape_rectangle_dark_blue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/label_take_photo"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="Take Photo"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <ImageView

                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/label_take_photo"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:src="@drawable/camera_icon" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:id="@+id/image"
                       android:background="@drawable/edit_text_layout_bg_lightblue"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="15dp"
                       android:layout_marginRight="15dp"
                       android:layout_width="match_parent"
                       android:layout_height="180dp"/>

                   <TextView
                       android:id="@+id/image_preview"
                       android:text="IMAGE PREVIEW"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"/>

               </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_submit"
                    android:layout_marginBottom="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    android:layout_width="180dp"
                    android:layout_height="50dp">

                    <RelativeLayout
                        android:background="@drawable/shape_rectangle_green"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/label_send"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginLeft="40dp"
                            android:layout_centerVertical="true"
                            android:text="Submit"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/label_send"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_send" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>