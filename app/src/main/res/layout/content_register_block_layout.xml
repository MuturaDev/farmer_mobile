<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.RegisterBlockActivity"
    tools:showIn="@layout/activity_register_block_layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="vertical"
            android:padding="10sp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/spinner_backgroung"
                android:layout_height="60dp">

                <Spinner

                    android:visibility="gone"
                    android:background="@null"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/spinner_farm"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingLeft="10dp"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/farm_spinner"
                    android:hint="crop date"/>


                <ProgressBar
                    android:id="@+id/spinner_progress"
                    android:visibility="visible"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>


            </RelativeLayout>





            <EditText
                android:id="@+id/txt_Capture_Block"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_bg"
                android:layout_width="match_parent"
                android:hint="Capture Block"
                android:textStyle="bold"
                android:textSize="15dp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="60dp"/>



            <Button
                android:id="@+id/btn_recruit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/dimen_30"
                android:layout_marginBottom="20sp"
                android:background="@drawable/shape_rectangle"
                android:onClick="submit"
                android:padding="10dp"
                android:text="Submit"
                android:textAllCaps="true"
                android:textColor="@color/colorwhite"
                android:typeface="normal" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>